{
  "name": "movie-server",
  "version": "1.0.0",
  "description": "电影小程序后端api接口服务，包含mocha单元测试",
  "main": "app.js",
  "scripts": {
    "dev": "nodemon app.js --config ./src/config/nodemon/index.dev.json",
    "aa": "nodemon app.js --config ./src/config/nodemon/index.prod.json",
    "prod": "pm2 start ecosystem.config.js",
    "stop": "pm2 stop app",
    "delete": "pm2 delete app",
    "test": "mocha test/**/*.js --recursive --timeout 10000",
    "socket": "nodemon ./src/chat/index.js"
  },
  "author": "GLF",
  "license": "ISC",
  "dependencies": {
    "@koa/router": "^9.0.1",
    "app-root-path": "^3.0.0",
    "dayjs": "^1.8.28",
    "elasticsearch": "^16.7.1",
    "ioredis": "^4.17.3",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.11.0",
    "koa-body": "^4.1.1",
    "koa-compress": "^4.0.1",
    "koa-cors": "0.0.16",
    "koa-morgan": "^1.0.1",
    "koa-static": "^5.0.0",
    "mime": "^2.4.6",
    "module-alias": "^2.2.2",
    "mongoose": "^5.9.17",
    "nodemailer": "^6.4.14",
    "socket.io": "^2.3.0",
    "validator": "^13.1.1",
    "winston": "^3.3.3"
  },
  "_moduleAliases": {
    "@src": "src",
    "@test": "test"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "co-mocha": "^1.2.2",
    "co-supertest": "0.0.10",
    "mocha": "^8.1.1",
    "supertest": "^4.0.2"
  }
}
